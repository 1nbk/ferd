// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  picture   String?
  googleId  String?  @unique
  role      UserRole @default(GUEST)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  properties Property[]
  bookings   Booking[]
  reviews    Review[]
  favorites  Favorite[]
  cars       Car[]

  @@index([email])
}

enum UserRole {
  GUEST
  HOST
  ADMIN
}

model Property {
  id          String   @id @default(cuid())
  title       String
  description String
  location    String
  price       Float
  bedrooms    Int
  bathrooms   Int
  guests      Int
  area        Int
  type        PropertyType
  images      Json     // JSON array of image URLs
  amenities   Json     // JSON array of amenities
  available   Boolean  @default(true)
  hostId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  host      User       @relation(fields: [hostId], references: [id], onDelete: Cascade)
  bookings  Booking[]
  reviews   Review[]
  favorites Favorite[]

  @@index([hostId])
  @@index([type])
  @@index([available])
  @@index([location])
}

enum PropertyType {
  apartment
  house
  condo
  villa
}

model Car {
  id           String   @id @default(cuid())
  make         String
  model        String
  year         Int
  price        Float
  seats        Int
  transmission String
  type         CarType
  images       Json     // JSON array of image URLs
  features     Json     // JSON array of features
  available    Boolean  @default(true)
  hostId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  host User @relation(fields: [hostId], references: [id], onDelete: Cascade)

  @@index([hostId])
  @@index([type])
  @@index([available])
  @@index([make])
}

enum CarType {
  sedan
  suv
  luxury
  sports
  convertible
  van
}

model Booking {
  id         String      @id @default(cuid())
  propertyId String
  userId     String
  checkIn    DateTime
  checkOut   DateTime
  guests     Int
  totalPrice Float
  status     BookingStatus @default(PENDING)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([userId])
  @@index([status])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Review {
  id         String   @id @default(cuid())
  propertyId String
  userId     String
  rating     Int      // 1-5
  comment    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([propertyId, userId])
  @@index([propertyId])
  @@index([userId])
}

model Favorite {
  id         String   @id @default(cuid())
  propertyId String
  userId     String
  createdAt  DateTime @default(now())

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([propertyId, userId])
  @@index([userId])
  @@index([propertyId])
}

